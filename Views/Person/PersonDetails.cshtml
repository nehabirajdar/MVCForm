
@{
    ViewData["Title"] = "PersonDetails";
}

<h1>Person Details</h1>
<form asp-action="PersonDetails">
    <table>
        <tr>
            <td>Enter Name</td>
            <td>
                @Html.TextBox("name");
            </td>
        </tr>
        <tr>
            <td>Enter Email</td>
            <td>
                @Html.TextBox("email");
            </td>
        </tr>
        <tr>
            <td>Enter Contact No</td>
            <td>
                @Html.TextBox("contact");
            </td>
        </tr>
        <tr>
            <td>Select Gender</td>
            <td>
                @Html.RadioButton("gender","Male")Male
                @Html.RadioButton("gender","Female")Female

            </td>
        </tr>
        <tr>
            <td>Do you want to participate in survey?</td>
            <td>
                @Html.DropDownList("options")
            </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Save" class="btn-btn-primary" />
                </td>
            </tr>

    </table>
</form>
