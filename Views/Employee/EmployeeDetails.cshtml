
@{
    ViewData["Title"] = "EmployeeDetails";
}

<h1>Employee Details</h1>
<form asp-action="EmployeeDetails">
    <table>
        <tr>
            <td>Enter EmployeeId</td>
            <td>
                @Html.TextBox("empid")
            </td>
            </tr>
        <tr>
            <td>Enter EmployeeName</td>
            <td>
                @Html.TextBox("empname")
            </td>
        </tr>
        <tr>
            <td>Enter Salary</td>
            <td>
                @Html.TextBox("salary")
            </td>
            </tr>
         <tr>
            <td>Select Department</td>
            <td>
                @Html.DropDownList("department")
            </td>
        </tr>
        <tr>
            <td>Select Gender</td>
            <td>
                @Html.RadioButton("gender","Male")male
                @Html.RadioButton("gender","Female")female

            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Save" class="btn-btn-primary" />
            </td>
        </tr>

    </table>

</form>

